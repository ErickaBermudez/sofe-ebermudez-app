<div class="container-fluid">
    <div class="row">
        <div class="col">
            <div class="card-box infections">
                <div class="header-title">Infections</div>
                <div class="data infected">
                    <div class="float-right">
                        <div class="graph-icon icon-infected">
                            {{ div model.data.todayCases model.case.firstObject.cases }}% <span class="material-icons">trending_up</span>
                        </div>
                    </div>
                    <div class="total">{{ formatLargeNumber @model.case.firstObject.cases }}</div>
                    <div class="today">{{ formatLargeNumber @model.data.todayCases }} today</div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card-box deaths">
                <div class="header-title">Deaths</div>
                <div class="data death">
                    <div class="float-right">
                        <div class="graph-icon icon-deaths">
                            {{ div model.data.totalDeaths model.data.finishedCases }} <span class="material-icons">trending_up</span>
                        </div>
                    </div>
                    <div class="total">{{formatLargeNumber @model.case.firstObject.deaths }}</div>
                    <div class="today">{{ formatLargeNumber @model.data.todayDeaths }} today</div>
                </div>

            </div>
        </div>
        <div class="col">
            <div class="card-box">
                <div class="header-title">Recovered</div>
                <div class="data recovered">
                    <div class="float-right">
                        <div class="graph-icon icon-recovered">
                            {{ div model.data.totalRecovered model.data.finishedCases }}%<span class="material-icons">trending_up</span>
                        </div>
                    </div>
                    <div class="total">{{ formatLargeNumber @model.case.firstObject.recovered }}</div>
                    <div class="today">{{ formatLargeNumber @model.data.activeCases }} remaining</div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card-box">
                <div class="header-title">Critical</div>
                <div class="data critical">
                    <div class="float-right">
                        <div class="graph-icon icon-critical">
                            {{div model.data.totalCritical model.data.activeCases}}%<span class="material-icons">trending_up</span>
                        </div>
                    </div>
                    <div class="total">{{ formatLargeNumber @model.data.totalCritical }}</div>
                    <div class="today">{{ formatLargeNumber @model.data.casesPer1M }} per million</div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid">
    <div class="row">
        <div class="col-xl-4">
            <div class="card-box">
                <div class="float-right">
                    <p id="today-stats">Today's Statistics</p>
                </div>
                <h4 class="header-title">{{model.country.length}} Affected Countries </h4>
                <!--<div class="form-group row">
                    <div class="col-md-8 col-8">
                        <input type="text" id="example-placeholder" class="form-control"
                            placeholder="Search Affected Countries">
                    </div>
                    <div class="col-md-4 col-4">
                        <select class="custom-select">
                            <option selected="" disabled>Sort By</option>
                            <option value="cases">Total Cases</option>
                            <option value="todayCases">Today Cases</option>
                            <option value="deaths">Total Deaths</option>
                            <option value="todayDeaths">Today Deaths</option>
                            <option value="recovered">Total Recoveries</option>
                        </select>
                    </div>
                </div>
                -->
                <div class="fa-3x text-center">
                    <i class="fas fa-circle-notch fa-spin m-2"></i>
                </div>
                <div class="infectedCountries">

                    {{#each model.country as |country|}}
                    <div class="infectedCountry">
                        <h5 class="infectedCountryName">{{ country.country }}</h5>
                        <p class="infectedCountryDetails font-weight-bold"><span class="text-blue">
                                {{ country.cases }} Cases</span> & <span class="text-danger"> {{ country.deaths }}
                                Deaths</span></p>
                        <div class="casesSmall">
                            <span class="infectedCountryCases text-blue">{{ country.todayCases }} + Cases</span>
                            <span class="infectedCountryDeaths text-danger">{{ country.todayDeaths }} +Deaths</span>
                        </div>
                    </div>
                    {{/each}}

                </div>
            </div>
        </div>

    </div>
</div>