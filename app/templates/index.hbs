<div class="container-fluid">
    <div class="row">
        <div class="col-xl-4">
            <div class="card-box">
                <div class="float-right">
                    <p>Today's Statistics</p>
                </div>

                <h4 class="header-title mb-3">{{ model.length }} Affected Countries </h4>
                <div class="form-group row">
                    <div class="col-md-8 col-8">
                        <input type="text" id="example-placeholder" class="form-control"
                            placeholder="Search Affected Countries">
                    </div>
                    <div class="col-md-4 col-4">
                        <select class="custom-select">
                            <option selected="" disabled>Sort By</option>
                            <option value="cases">Total Cases</option>
                            <option value="todayCases">Today Cases</option>
                            <option value="deaths">Total Deaths</option>
                            <option value="todayDeaths">Today Deaths</option>
                            <option value="recovered">Total Recoveries</option>
                        </select>
                    </div>
                </div>
                <div class="fa-3x text-center">
                    <i class="fas fa-circle-notch fa-spin m-2"></i>
                </div>
                <div class="infectedCountries">
                    {{#perfect-scroll}}
                        <div class="infectedCountry">
                            {{#each model as |country|}}
                                <h5 class="infectedCountryName mt-0 mb-1">{{ country.country }}</h5>
                                <p class="infectedCountryDetails font-weight-bold"><span class="text-blue">
                                        {{ country.cases }} Cases</span> & <span class="text-danger"> {{ country.deaths }}
                                        Deaths</span></p>
                                <p class="infectedCountryCases text-blue">{{ country.todayCases }} + Cases</p>
                                <p class="infectedCountryDeaths text-danger">{{ country.todayDeaths }} +Deaths</p>
                            {{/each}}
                        </div>
                    {{/perfect-scroll}}
                </div>
            </div>
        </div>

    </div>
</div>